## package management
alias pacman="pacman-color"	# colors :D
alias cower="cower -c -t /tmp/"
# pacman update
alias syu="sudo pacman-color -Syu"	# pacman upgrade
alias i="sudo pacman-color -S"		# pacman install
alias u="sudo pacman-color -U"		# makepkg install
# pacman search
alias ?qs="pacman -Qs" # query search
alias ?qi="pacman -Qi" # query info
alias ?ss="pacman -Ss" # sync search
alias ?si="pacman -Si" # sync info
# query listings
alias ?ql="pacman -Ql" # list files
alias ?qo="pacman -Qo" # check ownership
# aur update
alias sya="cower -udd" # aur upgrade
alias a="cower -dd"    # aur install
alias ?au="cower -u | pr -n -t #"	# aur update
# aur search
alias ?as="cower -s"   # aur search
alias ?ai="cower -i"   # aur info
# remove pkgs
alias rsn="sudo pacman -Rsn" # clean 'n purge
alias qdt="pacman -Qqdt"     # unrequired deps

