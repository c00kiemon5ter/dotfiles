incoming=<span style="color: #A82F2F">(%h%:%m%) <span style="font-weight: bold;">%nick% %says%:<br/>  </span></span> %formattedmessage%<br/>
consecutive_incoming=   %formattedmessage%<br/>
offline_incoming=consecutive_incoming
outgoing=<span style="color: #16569E">(%h%:%m%) <span style="font-weight: bold;">%nick% %says%:<br/>  </span></span> %formattedmessage%<br/>
consecutive_outgoing=consecutive_incoming
information=(%h%:%m%) <span style="font-weight: bold;">%message%</span><br/>
error=<span style="color: #FF0000">(%h%:%m%) <span style="font-weight: bold;">%message%</span></span><br/>
