# Navigation:
alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"

# always use color with ls and grep
alias ls="ls --color=always"
alias grep="grep --color=always"
alias egrep="egrep --color=always"

# Editors:
alias v="vim"
alias sv="sudo vim"
alias svim="sudo vim"
alias n="nano -w"
alias nano="nano -w"
alias sn="sudo nano"
alias snano="sudo nano"
alias g="geany"

# common
alias df="df -h -T"
alias mkdir="mkdir -p -v"
alias ll="ls -l"
alias la="ls -A"
alias lla="ls -al"
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -I -v"
alias du="du -h -a --max-depth=1"
alias lw="wmctrl -l | cut -d\" \" -f5- | sed \"s/^[[:space:]|\(].*$//\" | uniq"
alias :q="exit"

# files
alias scolors="~/.scripts/colors.sh"
##tint
alias vtint="$EDITOR ~/.config/tint2/tint2rc"
alias rtint="killall tint2; tint2 && disown &"
##openbox
alias obr="openbox --reconfigure"
alias obrc="$EDITOR ~/.config/openbox/rc.xml && obr"
alias obm="$EDITOR ~/.config/openbox/menu.xml && obr"
alias oba="$EDITOR ~/.config/openbox/autostart.sh && obr"
#bash
alias vbash="$EDITOR ~/.bashrc && reload"
alias valias="$EDITOR ~/.alias && reload"
alias vfuncs="$EDITOR ~/.funcs && reload"
alias reload="source ~/.bashrc && obr"
alias vxdefs="$EDITOR ~/.Xdefaults"
##su-files
alias vmkconf="sudo $EDITOR /etc/make.conf"
alias vxorg="sudo $EDITOR /etc/X11/xorg.conf"
alias vgrub="sudo $EDITOR /boot/grub/grub.conf"
alias vmpd="sudo $EDITOR /etc/mpd.conf"

# kernel files
alias ukernfls="cp -u /boot/config ~/Projects/GITrepos/dotfiles/kernel/ && \
cp /boot/vmlinuz ~/Projects/GITrepos/dotfiles/kernel/ && \
cp /boot/System.map ~/Projects/GITrepos/dotfiles/kernel/"

# mount
alias mount="sudo mount"
alias umount="sudo umount"

# poweroff etc
alias shutdown="sudo shutdown"
alias shutnow="sudo shutdown -h now"
alias reboot="sudo reboot"
alias off="~/.scripts/pancakes"

# remote ssh to uni servers
alias aueb="ssh p3060190@dias.aueb.gr"
alias alex="telnet p3060190@alexandros.ccslab.aueb.gr"
alias foss="ssh root@foss.aueb.gr"

# Other
alias s="sudo"
alias c="clear"
alias chrome="chromium"
alias mzk="ncmpcpp"
# fortune equality
alias fortune="fortune -e -a"
# Gets a random Futurama quote from slashdot.org(/.)
alias futurama="curl -Is slashdot.org | egrep '^X-(F|B|L)' | cut -d \- -f 2"
alias cowfortune="cowthink -d $(fortune -sea)"

# dump euse error messages
alias euse="euse -i $@ 2>/dev/null"
# Shows your WAN IP, when you`re sitting behind a router
alias myIp="curl -s checkip.dyndns.org | grep -Eo '[0-9\.]+'"

# Quartus 9.0
alias quartus="/opt/altera9.0/quartus/bin/quartus"
# Look and Feel of Netbeans
#alias netbeans-6.7="netbeans-6.7 --laf com.sun.java.swing.plaf.gtk.GTKLookAndFeel"

# the 'tree' command ..revisited
alias tree="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"
# the matrix
alias matrix="tr -c \"[:digit:]\" \" \" < /dev/urandom | dd cbs=$COLUMNS conv=unblock | GREP_COLOR=\"1;32\" grep --color \"[^ ]\""
#echo $(shuf -i 1-49 | head -n6 | sort -n)'
alias lotto="shuf -i 1-49 | head -n6 | sort -n | xargs"

