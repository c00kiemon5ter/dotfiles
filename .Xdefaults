!URxvt Settings {
URxvt*title:rxvt-unicode
URxvt*iconName:urxvt
URxvt*termName:rxvt-unicode

URxvt*geometry:98x28 
!90x24+369+436
URxvt*borderLess:false
URxvt*externalBorder:1
URxvt*internalBorder:0

URxvt*visualBell:false
URxvt*highlightSelection:True
URxvt*buffered:true
URxvt*saveLines:3000

URxvt*perl-ext-common:default,matcher,selection,selection-autotransform,-searchable-scrollback,-readline
URxvt.selection-autotransform.0: s/^([^:[:space:]]+):(\\d+):?$/vim +$2 \\Q$1\\E\\x0d/
cutchars:"()*,<>[]{}|'"
URxvt*urlLauncher:chromium-dev
URxvt.matcher.button:1
URxvt.keysym.M-u: perl:mark-yank-urls:activate_mark_mode
URxvt.perl-ext: mark-yank-urls
URxvt.underlineURLs:true

URxvt*eightBitInput:true
URxvt*inputMethod:SCIM
URxvt*multichar_encoding:utf-8
URxvt*preeditType:OverTheSpot,Root
URxvt*imLocale:en_US.UTF-8

modifier:meta
!alt, meta, hyper, super, mod1..5
!}

!Scroll and mousewheel {
XTerm*jumpScroll:true
XTerm*multiScroll:true
URxvt*jumpScroll:true
URxvt*skipScroll:true
URxvt*scrollBar:false
URxvt*scrollBar_right:false
URxvt*scrollstyle:plain
URxvt*secondaryScroll:true 
URxvt*scrollTtyOutput:false
URxvt*scrollWithBuffer:true
URxvt*scrollTtyKeypress:true
URXvt*mouseWheelScrollPage:false
!}

